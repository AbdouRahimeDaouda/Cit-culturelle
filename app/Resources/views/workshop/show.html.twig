{% extends 'base.html.twig' %}

            {% block content %}
    <h1>Workshop</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ workshop.id }}</td>
            </tr>
            <tr>
                <th>Nbparticipant</th>
                <td>{{ workshop.nbParticipant }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if workshop.dateDebut %}{{ workshop.dateDebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if workshop.dateFin %}{{ workshop.dateFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ workshop.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('workshop_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('workshop_edit', { 'id': workshop.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
