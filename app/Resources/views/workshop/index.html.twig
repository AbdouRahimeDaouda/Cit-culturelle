{% extends 'base.html.twig' %}

            {% block content %}
<section class="content blog-page">
    <div class="container">

        <div class="row clearfix">
            <div class="col-lg-12">


                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="card" style="padding-left: 50px; padding-right:50px;">
                        <div class="header">





                            <h2> Workshop</h2>


                        </div>
                        <div class="body">


                        <table class="table table-striped table-bordered table-dark">
        <thead>
            <tr>

                <th>Nbparticipant</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for workshop in workshops %}
            <tr>
                <td><a href="{{ path('workshop_show', { 'id': workshop.id }) }}">{{ workshop.id }}</a></td>
                <td>{{ workshop.nbParticipant }}</td>
                <td>{% if workshop.dateDebut %}{{ workshop.dateDebut|date('Y-m-d') }}{% endif %}</td>
                <td>{% if workshop.dateFin %}{{ workshop.dateFin|date('Y-m-d') }}{% endif %}</td>
                <td>{{ workshop.description }}</td>
                <td>


                            <a class="btn btn-info" href="{{ path('workshop_show', { 'id': workshop.id }) }}">show</a>


                            <a class="btn btn-warning" href="{{ path('workshop_edit', { 'id': workshop.id }) }}">edit</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('workshop_new') }}">Create a new workshop</a>
        </li>
    </ul>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div></section>
{% endblock %}
