{% extends 'base.html.twig' %}

{% block content %}
<section class="content blog-page">
    <div class="container">

        <div class="row clearfix">
            <div class="col-lg-12">


                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="card" style="padding-left: 50px; padding-right:50px;">
                        <div class="header">


                        <h1>Clubs list</h1>
                         </div>
                         <div class="body">

    <table class="table table-striped table-bordered table-dark">
        <thead>
            <tr>

                <th>Nom</th>
                <th>Genre</th>
                <th>Datecreation</th>
                <th>Groupeage</th>
                <th>Prixinscri</th>
                <th>Description</th>
                <th>Etat</th>
                <th>President</th>
                <th>Nbrparticipant</th>
                <th>Budget</th>


                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>

                <td>{{ club.nom }}</td>
                <td>{{ club.genre }}</td>
                <td>{% if club.dateCreation %}{{ club.dateCreation|date('Y-m-d') }}{% endif %}</td>
                <td>{{ club.groupeAge }}</td>
                <td>{{ club.prixInscri }}</td>
                <td>{{ club.description }}</td>
                <td>{{ club.etat }}</td>
                <td>{{ club.president }}</td>
                <td>{{ club.nbrParticipant }}</td>
                <td>{{ club.budget }}</td>


                <td>
                    <a class="btn btn-info" href="{{ path('club_show', { 'id':club.id }) }}">show</a>


                    <a class="btn btn-warning" href="{{ path('club_edit', { 'id': club.id }) }}">edit</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('club_new') }}">Create a new club</a>
        </li>
    </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
